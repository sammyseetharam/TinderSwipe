<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">

    <ImageButton
        android:id="@+id/imageButtonPop"
        android:layout_width="305dp"
        android:layout_height="130dp"
        android:layout_marginBottom="@dimen/marginFromBotton"
        android:adjustViewBounds="true"
        android:background="@color/secondaryLightColor"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/imageButtonRap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/pop"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/imageButtonRap"
        android:layout_width="305dp"
        android:layout_height="130dp"
        android:layout_marginBottom="@dimen/marginFromBotton"
        android:adjustViewBounds="true"
        android:background="@color/secondaryLightColor"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/imageButtonRock"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/rap"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/imageButtonRock"
        android:layout_width="305dp"
        android:layout_height="130dp"
        android:layout_marginBottom="16dp"
        android:adjustViewBounds="true"
        android:background="@color/secondaryLightColor"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/rock"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/imageButtonCountry"
        android:layout_width="305dp"
        android:layout_height="130dp"
        android:layout_marginBottom="28dp"
        android:adjustViewBounds="true"
        android:background="@color/secondaryLightColor"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/imageButtonPop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/country"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/selectAGenre"
        android:layout_width="280dp"
        android:layout_height="57dp"
        android:fontFamily="@font/bebas_neue"
        android:gravity="center"
        android:text="Select a Genre:"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/imageButtonCountry"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="68dp"
        android:layout_height="76dp"
        android:layout_marginEnd="160dp"
        app:layout_constraintBottom_toTopOf="@+id/selectAGenre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/spinder_logo" />

</androidx.constraintlayout.widget.ConstraintLayout>